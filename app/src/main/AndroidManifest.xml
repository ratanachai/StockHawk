<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sam_chordas.android.stockhawk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
        <uses-permission android:name="android.permission.WAKE_LOCK" />
        <uses-permission android:name="com.google.android.gcm.demo.permission.C2D_MESSAGE" />
        <permission android:name="com.google.android.gcm.demo.permission.C2D_MESSAGE"
            android:protectionLevel="signature" />

        <activity
            android:name=".ui.MyStocksActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.StockDetailActivity"
            android:label="@string/title_stock_detail_activity"
            android:parentActivityName=".ui.MyStocksActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sam_chordas.android.stockhawk.ui.MyStocksActivity" />
        </activity>

        <!-- GCM service -->
        <service android:name=".service.StockTaskService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>
        <service android:name=".service.StockIntentService" />

        <!-- Content Provider via Schematics -->
        <provider android:name=".data.generated.QuoteProvider"
            android:authorities="com.sam_chordas.android.stockhawk.data.QuoteProvider"
            android:exported="false" />

        <!-- One Stock Widget -->
        <receiver android:name=".widget.OneStockWidgetProvider"
            android:label="@string/title_widget_one_stock">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.sam_chordas.android.stockhawk.service.ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_one_stock" />
        </receiver>
        <service android:name=".widget.OneStockWidgetIntentService" />

        <!-- Stocks Widget (Collection data) -->
        <receiver android:name=".widget.StocksWidgetProvider"
            android:label="@string/title_widget_stocks">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.sam_chordas.android.stockhawk.service.ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_stocks" />
        </receiver>
        <service
            android:name=".widget.StocksWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>